<log4z>
    <logger name="Common">
        <appender>CommonAppender</appender>
    </logger>
    <appender name="CommonAppender">
        <levelDefine size="50" min="debug" max="warn" line="false" encoder="console" console="true" maxDay="15" maxBackup="2">
            <path>log/info.log</path>
        </levelDefine>
        <levelDefine size="50" min="error" max="fatal" line="false" encoder="console" console="true" maxDay="15" maxBackup="2">
            <path>log/error.log</path>
        </levelDefine>
    </appender>
</log4z>